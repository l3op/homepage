---
const {name} = Astro.props;
const title = name ?? 'Pau García Chiner';
---

<html lang="en">
  <head>
    <!-- Basic Meta Tags -->
    <title>{title}</title>
    <meta charset="utf-8" />
    <meta name="color-scheme" content="dark" />
    <meta name="theme-color" content="#0d0101" />
    <meta name="viewport" content="width=device-width" />
    <meta name="image" content="https://pauchiner.es/images/og.png" />
    <meta
      name="description"
      content="Pau García Chiner is a full-stack software developer obsessed with minimal designs and the perfect user experience."
    />
    <!-- OG Meta Tags -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Pau García Chiner" />
    <meta property="og:url" content="https://pauchiner.es" />
    <meta property="og:site_map" content="Pau García Chiner" />
    <meta property="og:image" content="https://pauchiner.es/images/og.png" />
    <meta
      name="og:description"
      content="Pau García Chiner is a full-stack software developer obsessed with minimal designs and the perfect user experience."
    />
    <!-- Favicon Meta Tags -->
    <link rel="manifest" href="images/favicon/site.webmanifest" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="images/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="images/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="images/favicon/favicon-16x16.png"
    />
    <!-- Font Link Tags -->
    <link
      rel="preload"
      href="/fonts/Poppins-ExtraLight.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/Poppins-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/Poppins-Medium.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/Poppins-SemiBold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/Poppins-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/fonts.css';
  @import '../styles/colors.css';
  @import '../styles/overrides.css';

  html {
    margin: 0;
    display: flex;
    color: var(--text);
    font-family: 'Poppins';
    justify-content: center;
    background: var(--background);
  }

  body {
    margin: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    flex-direction: column;
  }
</style>
