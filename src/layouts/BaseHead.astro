---
import {ViewTransitions} from 'astro:transitions';

const {title = 'Pau García Chiner'} = Astro.props;
---

<head>
  <!-- Basic Meta Tags -->
  <title>{title}</title>
  <meta charset="utf-8" />
  <meta name="color-scheme" content="dark" />
  <meta name="theme-color" content="#0d0101" />
  <meta name="viewport" content="width=device-width" />
  <meta name="image" content="https://pauchiner.es/images/og.png" />
  <meta
    name="description"
    content="Pau García Chiner is a full-stack software developer obsessed with minimal designs and the perfect user experience."
  />
  <!-- Sitemap Meta Tag -->
  <link rel="sitemap" href="/sitemap-index.xml" />
  <!-- OG Meta Tags -->
  <meta property="og:type" content="website" />
  <meta property="og:title" content="Pau García Chiner" />
  <meta property="og:url" content="https://pauchiner.es" />
  <meta property="og:site_map" content="Pau García Chiner" />
  <meta property="og:image" content="https://pauchiner.es/images/og.png" />
  <meta
    name="og:description"
    content="Pau García Chiner is a full-stack software developer obsessed with minimal designs and the perfect user experience."
  />
  <!-- OG Twitter Meta Tags -->
  <meta property="twitter:title" content="Pau García Chiner" />
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:image" content="https://pauchiner.es/images/og.png" />
  <meta
    name="twitter:description"
    content="Pau García Chiner is a full-stack software developer obsessed with minimal designs and the perfect user experience."
  />
  <!-- Fonts Meta Tags -->
  <link
    rel="preload"
    href="/fonts/poppins-200.woff2"
    as="font"
    type="font/woff"
    crossorigin
  />
  <link
    rel="preload"
    href="/fonts/poppins-400.woff2"
    as="font"
    type="font/woff"
    crossorigin
  />
  <link
    rel="preload"
    href="/fonts/poppins-500.woff2"
    as="font"
    type="font/woff"
    crossorigin
  />
  <link
    rel="preload"
    href="/fonts/poppins-600.woff2"
    as="font"
    type="font/woff"
    crossorigin
  />
  <link
    rel="preload"
    href="/fonts/poppins-700.woff2"
    as="font"
    type="font/woff"
    crossorigin
  />
  <!-- Favicon Meta Tags -->
  <link
    rel="apple-touch-icon"
    sizes="180x180"
    href="images/favicon/apple-touch-icon.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="32x32"
    href="images/favicon/favicon-32x32.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="16x16"
    href="images/favicon/favicon-16x16.png"
  />
  <ViewTransitions fallback="none" />
</head>
