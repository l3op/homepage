---
interface Props {
  name: string;
}

const {name} = Astro.props;

if (name == null) {
  throw new Error(
    'The `name` property is needed to create a new section component.'
  );
}

const identifier = name.toLowerCase();
---

<section id={identifier}>
  <h3>{name.toUpperCase()}</h3>
  <slot />
</section>

<style>
  section {
    display: flex;
    margin: 64px 0px;
    position: relative;
    flex-direction: column;
  }

  h3 {
    margin: 0;
    font-weight: 600;
    color: var(--text);
    font-size: var(--h3);
  }
</style>
